@page
@model RazorPagesMovie.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create Movie</h1>

<div class="row">
    <div class="col-md-4">
        <!-- Add enctype="multipart/form-data" to handle file uploads -->
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Movie.Title" class="control-label"></label>
                <input asp-for="Movie.Title" class="form-control" />
                <span asp-validation-for="Movie.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.ReleaseDate" class="control-label"></label>
                <input asp-for="Movie.ReleaseDate" class="form-control" />
                <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.GenreId" class="control-label">Genre</label>
                <select asp-for="Movie.GenreId" class="form-control" asp-items="ViewBag.GenreId">
                    <option value="">-- Select Genre --</option>
                </select>
                <span asp-validation-for="Movie.GenreId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.Price" class="control-label"></label>
                <input asp-for="Movie.Price" class="form-control" />
                <span asp-validation-for="Movie.Price" class="text-danger"></span>
            </div>

            <!-- Add file upload input -->
            <div class="form-group">
                <label class="control-label">Thumbnail Image</label>
                <input type="file" name="ThumbnailFile" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

