@page
@model RazorPagesMovie.Pages.ManageModel

@{
    ViewData["Title"] = "Manage Movies";
}

<h1>Manage Movies</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Add New Movie</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movie)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.ReleaseDate.ToShortDateString()</td>
                <td>@item.GenreRef.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="Index" class="btn btn-secondary">Back to Landing Page</a>
</div>
